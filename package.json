{
  "name": "foton-challenge",
  "version": "0.0.1",
  "private": true,
  "description": "Foton FullStack Challenge",
  "repository": {
    "type": "git",
    "url": "https://github.com/FotonTech/golden-stack"
  },
  "license": "MIT",
  "author": "Jean Leon√ßo",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "app:android": "yarn workspace @foton-challenge/app android",
    "app:ios": "yarn workspace @foton-challenge/app ios",
    "app:pod": "yarn workspace @foton-challenge/app pod:install",
    "app:start": "yarn workspace @foton-challenge/app start",
    "graphql": "yarn workspace @foton-challenge/server graphql",
    "lint": "eslint --fix --ext .js,.ts,.tsx",
    "lint:ci": "eslint --quiet --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "prettier": "prettier",
    "relay": "yarn workspace @foton-challenge/app relay",
    "server:build": "yarn workspace @foton-challenge/server build",
    "startup": "./scripts/startup.sh",
    "test": "jest",
    "test:server": "yarn workspace @foton-challenge/server test",
    "tsc": "tsc --pretty",
    "update": "yarn update-schema && yarn relay",
    "update-schema": "yarn workspace @foton-challenge/server update-schema"
  },
  "lint-staged": {
    "*.yml": [
      "yarn prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "yarn prettier --write",
      "yarn lint"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-relay": "^1.5.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-cli": "25.1.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.3",
    "prettier": "^1.19.1",
    "sort-package-json": "1.22.1",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "lodash": "4.x"
  }
}
