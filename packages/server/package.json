{
  "name": "@foton-challenge/server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "yarn clean && babel src --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" --ignore *.spec.js --out-dir dist --copy-files --source-maps --verbose",
    "clean": "rm -rf dist",
    "copy-to-package": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" scripts/copySchemaToPackage.js",
    "graphql": "webpack --watch --progress --config webpack.config.js",
    "start": "node dist/graphql/index.js",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "update-schema": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" scripts/updateSchema.js && yarn copy-to-package"
  },
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^4.3.0",
    "@foton-challenge/babel": "*",
    "@koa/router": "^8.0.8",
    "@types/koa__router": "^8.0.2",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.6.4",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "dotenv-safe": "^8.2.0",
    "env-var": "^6.0.1",
    "graphql": "^14.6.0",
    "graphql-add-middleware": "^0.3.7",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-relay": "^0.6.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-cors": "^0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-logger": "^3.2.1",
    "mongoose": "^5.13.15",
    "subscriptions-transport-ws": "^0.9.16",
    "webpack-node-externals": "^1.7.2",
    "yup": "^0.28.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv-safe": "^8.1.0",
    "@types/graphql-relay": "^0.4.11",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/koa": "^2.11.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-convert": "^1.2.3",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-graphql": "^0.8.3",
    "@types/koa-logger": "^3.1.1",
    "@types/mongoose": "^5.7.1",
    "@types/yup": "^0.26.32",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "mongodb-memory-server": "^6.3.1",
    "reload-server-webpack-plugin": "^1.0.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
